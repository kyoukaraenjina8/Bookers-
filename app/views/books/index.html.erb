<div class ="box">
<div>
    <%= flash[:notice] %>
</div>
  <div class="blogtitle">
    <h1>Books<h1>
  </div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
      <tr>
          <tr>
        <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure? " %></td>
          </tr>
       </tr>
  </tbody>
      <% end %>
</table>

<div class = "new-box">
  <h2>New book</h2>
</div>
  <%= form_with model: @books.new do |f| %>
<div class = "entrybar">
    <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= "error." + message %></li>
        <% end %>
      </ul>
    <% end %>
    <span>Title</span>
      <div class = title-box>
        <%= f.text_field :title %>
      </div>
      <span>Body</span>
      <div class = body-box>
        <%= f.text_area :body %>
      </div>
</div>
<div class = "button">
  <%= f.submit 'Create Book' %>
  <% end %>
</div>
</div>